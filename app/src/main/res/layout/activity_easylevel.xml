<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F1EDF5"
    android:layout_height="match_parent"
    tools:context=".Easylevel">


    <Button
        android:id="@+id/btn_ready"
        android:text="Ready"
        android:textSize="50sp"
        android:padding="30dp"
        android:elevation="4dp"
        android:textColor="#ffffff"
        android:background="#9575CD"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:id="@+id/rellay0"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rellay1"
            android:background="#CE93D8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_timer"
                android:text="30s"
                android:textSize="25sp"
                android:elevation="5dp"
                android:padding="10dp"
                android:layout_alignParentStart="true"
                android:layout_margin="20dp"
                android:background="#E1BEE7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_score"
                android:text="0/0"
                android:textSize="25sp"
                android:padding="10dp"
                android:layout_alignParentEnd="true"
                android:elevation="5dp"
                android:layout_margin="20dp"
                android:background="#E1BEE7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rellay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rellay1"
            android:layout_marginTop="0dp">

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:background="#FF025A"
                android:elevation="5dp"
                android:padding="20dp"
                android:text="31 + 12"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />

            <GridLayout
                android:id="@+id/grid_layout"
                android:layout_below="@id/tv_question"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_answer0"
                    android:text="3"
                    android:onClick="chooseAnswer"
                    android:textSize="25sp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:tag="0"
                    android:background="#FFECB3"
                    android:layout_height="150dp"
                    android:layout_width="150dp"/>

                <Button
                    android:id="@+id/btn_answer1"
                    android:text="33"
                    android:onClick="chooseAnswer"
                    android:textSize="25sp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:tag="1"
                    android:background="#B2DFDB"
                    android:layout_height="150dp"
                    android:layout_width="150dp"/>

                <Button
                    android:id="@+id/btn_answer2"
                    android:text="12"
                    android:onClick="chooseAnswer"
                    android:textSize="25sp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:tag="2"
                    android:background="#FFCCBC"
                    android:layout_height="150dp"
                    android:layout_width="150dp"/>

                <Button
                    android:id="@+id/btn_answer3"
                    android:text="43"
                    android:onClick="chooseAnswer"
                    android:textSize="25sp"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:tag="3"
                    android:background="#C8E6C9"
                    android:layout_height="150dp"
                    android:layout_width="150dp"/>

            </GridLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_answer_state"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_below="@id/rellay2"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_play_again"
            android:text="Play Again"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_answer_state"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            android:textColor="#ffffff"
            android:background="#FFCA28"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>